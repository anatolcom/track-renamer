<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="anatol" runOnChange="true"> <!--context="mycontext"-->

        <comment>Создание таблиц</comment>

        <createTable tableName="info">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="artist" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
            <column name="title" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
            <column name="comment" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="track">
            <!--<column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>-->
            <column autoIncrement="false" name="md5" type="VARCHAR(32)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="filename" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="length" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="bitrate" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="bitrate_type" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="from_name_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_from_name" references="info(id)"/>
            </column>
            <column name="id3v1_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_id3v1" references="info(id)"/>
            </column>
            <column name="id3v2_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_id3v2" references="info(id)"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>